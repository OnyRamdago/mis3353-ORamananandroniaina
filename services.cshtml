@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Service_Page"; 
var animalList= "select * from Animal";
var serviceList = "select * from ServiceType";
var clientList = "select * from Client";

string successMsg = "";

if (IsPost) {
switch(Request.Form["SaveType"]) {
case "Add":
db.Execute("insert into Service (ServiceID, AnimalID, ServiceTypeID, ClientID, ServiceDate) values (@0, @1, @2, @3, @4)", Request.Form["servid"], Request.Form["animid"], Request.Form["servtypeid"], Request.Form["clientid"],Request.Form["sdate"]);
successMsg = "Service added.";
break;

case "Edit":
db.Execute("update Service set AnimalID=@1, ServiceTypeID=@2, ClientID=@3, ServiceDate=@4 where ServiceID=@0", Request.Form["animid"], Request.Form["servtypeid"], Request.Form["clientid"],Request.Form["sdate"]);
successMsg = "Service updated.";
break;

case "Delete":
db.Execute("delete from Service where ServiceID=@0", Request.Form["servid"]);
successMsg = "Service deleted.";
break;
}
}
}

@if(successMsg != "")
{
<div class="alert alert-success">
  <strong>Success!</strong> @successMsg
</div>
}
<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title" id = "modalTitle">Add New Service</h4>
        <button type="button" class="close" data-dismiss="modal" id = "myClose">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
         <form method="post" action="">
  <div class="form-group">
    <label for="servid">Service ID:</label>
    <input type="text" class="form-control" id="servid" name = "servid">
  </div>
  <div class="form-group">
    <label for="animalList">Animal ID:</label>
 <select class = "form-control" id ="animid" name = "animid">
   @foreach(var animalrow in db.Query(animalList))
   {
   <option value = "@animalrow.AnimalID">@animalrow.AnimalID</option>
   }
    </select>
  </div>
  <div class="form-group">
    <label for="serviceList">Donor ID:</label>
 <select class = "form-control" id ="servtypeid" name = "servtypeid">
   @foreach(var servicerow in db.Query(serviceList))
   {
   <option value = "@servicerow.ServiceTypeID">@servicerow.ServiceTypeID</option>
   }
    </select>
  </div>
   
   <div class="form-group">
    <label for="clientList">Client ID:</label>
 <select class = "form-control" id ="clientid" name = "clientid">
   @foreach(var clientrow in db.Query(clientList))
   {
   <option value = "@clientrow.ClientID">@clientrow.ClientID</option>
   }
    </select>
  </div>
  <div class="form-group">
    <label for="sdate">Service Date:</label>
    <input type="date" class="form-control" id="sdate" name = "sdate">
  </div>
  <div class="form-group">  
    <input type="hidden" name="SaveType" id="SaveType" value="Add">
<button type="submit" class="btn btn-primary">Save</button>
</form> 
      </div>
    </div>
  </div>
</div>

<h1>
    Donations
<!-- Button to Open the Modal -->

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  <i class="fas fa-plus-circle"></i>
</button>
</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Service ID</th>
                <th>Animal ID</th>
                <th>Service Type ID</th>
                <th>Client ID</th>
                <th>Service Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.ServiceID</td> 
<td>@row.AnimalID</td> 
<td>@row.ServiceTypeID</td> 
<td>@row.ClientID</td> 
<td>@row.ServiceDate</td> 
  <td><button type="button" class="btn btn-primary myEdit" data-servid = "@row.ServiceID" data-animid = "@row.AnimalID" data-servtypeid = "@row.ServiceTypeID" data-clientid = "@row.ClientID" data-sdate="@row.ServiceDate"><i class="far fa-pencil-alt"></i></button></td>
  <td>
    <form method="post" action="">
      <input type="hidden" name="servid" value="@row.ServiceID">
      <input type="hidden" name="SaveType" value="Delete">
      <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');"><i class="far fa-trash-alt"></i></button>
    </form>
  </td>
</tr> 
}
        </tbody>
    </table>
</div>
<script>
$(document).ready(function(){
  
  $(".myEdit").click(function(){
    $("#modalTitle").text("Edit Donation");
    
    $("#servid").val($(this).attr("data-servid"));
    $("#servid").attr("disabled", "disabled");
    $("#animalid").val($(this).attr("data-animalid"));
    $("#servtypeid").val($(this).attr("data-servtypeid"));
    $("#clientid").val($(this).attr("data-clientid"));

    $("#sdate").val($(this).attr("data-sdate"));
   
     $("#myModal").modal({
       show: true
     });
    $("#SaveType").val("Edit");
  });
    $("#myClose").click(function(){
    $("#modalTitle").text("Add New Donation");
    
    $("#servid").removeAttr("disabled");
    $("#servid").val("");
    $("#animalid").val("");
    $("#servtypeid").val("");
   
    $("#clientid").val("");
    $("#sdate").val("");

    $("#SaveType").val("Add");
  });
});
</script>
