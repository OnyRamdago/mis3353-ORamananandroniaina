@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select dn.* from donation dn"; 
}
<h1>Donations</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Donation ID</th>
                <th>Shelter ID</th>
                <th>Donor ID</th>
                <th>Donation Amount</th>
                <th>Donation Type</th>
            </tr>
        </thead>
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.DonationID</td> 
<td>@row.ShelterID</td> 
<td>@row.DonorID</td> 
<td>@row.DonationAmount</td>
<td>@row.DonationType</td> 
</tr> 
}
        </tbody>
    </table>
</div>
