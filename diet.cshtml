@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Diet_Page"; 
var foodList= "select * from Food";
var animalList = "select * from Animal";
string successMsg = "";
if (IsPost){
db.Execute("insert into Diet (DietID, AnimalID, FoodID, FeedingQuantity, DietStart, DietEnd, Description) values (@0, @1, @2, @3, @4, @5, @6)", Request.Form["dietid"], Request.Form["animalid"], Request.Form["foodid"], Request.Form["feedqty"], Request.Form["start"], Request.Form["end"], Request.Form["description"]);
successMsg =" Diet added.";
}
}
@if (successMsg != "") {
<div class="alert alert-success">
  <strong>Success!</strong> Record Saved
</div>
}
<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title" id ="modaltitle">Add New Diet</h4>
        <button type="button" class="close" data-dismiss="modal" id=myClose">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
         <form method="post" action="">
  <div class="form-group">
    <label for="dietid">Diet ID:</label>
    <input type="text" class="form-control" id="dietid" name = "dietid">
  </div>
  <div class="form-group">
    <label for="animalList">Animal ID:</label>
 <select class = "form-control" id ="animid" name = "animid">
   @foreach(var animalrow in db.Query(animalList))
   {
   <option value = "@animalrow.AnimalID">@animalrow.AnimalID</option>
   }
    </select>
  </div>
  <div class="form-group">
    <label for="animalList">Food ID:</label>
<select class = "form-control" id ="foodid" name = "foodid">
   @foreach(var foodrow in db.Query(foodList))
   {
   <option value = "@foodrow.FoodID">@foodrow.FoodID</option>
   }  </div>
   <div class="form-group">
    <label for="feedqty">Feeding Quantity:</label>
    <input type="text" class="form-control" id="feedqty" name = "feedqty">
  </div>
  <div class="form-group">
    <label for="start">Diet Start Date:</label>
    <input type="text" class="form-control" id="start" name = "start">
  </div>
    <div class="form-group">
    <label for="end">Diet End Date:</label>
    <input type="text" class="form-control" id="end" name = "end">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <input type="text" class="form-control" id="description" name = "description">
  </div>
<button type="submit" class="btn btn-primary">Save</button>
</form> 
      </div>
    </div>
  </div>
</div>

<h1>
    Diets
<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  +
</button>
</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Diet ID</th>
                <th>Animal ID</th>
                <th>Food ID</th>
                <th>Feeding Quantity</th>
                <th>Diet Start Date</th>
                <th>Diet End Date</th>
              <th></th>
            </tr>
        </thead>
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.DietID</td> 
<td>@row.AnimalID</td> 
<td>@row.FoodID</td> 
<td>@row.FeedingQuantity</td>
<td>@row.DietStart.ToString("MM/dd/yyyy")</td> 
<td>@row.DietEnd.ToString("MM/dd/yyyy")</td> 
  <td><button type="button" class="btn btn-primary myEdit" data-dietid="@row.DietID" data-animalid="@row.AnimalID" data-foodid="@row.FoodID" data-feedingquantity="@row.FeedingQuantity" data-dietstart="@row.DietStart" data-dietend="@row.DietEnd">Edit</button></td>
</tr> 
}
        </tbody>
    </table>
</div>
 <script>
$(document).ready(function(){
  
  $(".myEdit").click(function(){
    $("#modalTitle").text("Edit Diet");
    
    $("#dietid").val($(this).attr("data-dietid"));
    $("#animalid").val($(this).attr("data-animalid"));
    $("#foodid").val($(this).attr("data-foodid"));
    $("#feedingquantity").val($(this).attr("data-feedingquantity"));
    $("#streetaddress").val($(this).attr("data-streetaddress"));
    $("#dietstart").val($(this).attr("data-dietstart"));
    $("#dietend").val($(this).attr("data-dietend"));
     $("#myModal").modal({
       show: true
     });
    $("#SaveType").val("Edit");
  });
    $("#myClose").click(function(){
    $("#modalTitle").text("Add New Diet");
    
    $("#dietid").val("");
    $("#animalid").val("");
    $("#foodid").val("");
    $("#feedingquantity").val("");
    $("#dietstart").val("");
    $("#dietend").val("");
    $("#SaveType").val("Add");
  });
});
</script>
