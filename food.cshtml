@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Food_Page"; 
}

<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add New Food</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
         <form method="post" action="save-food">
  <div class="form-group">
    <label for="foodID">Food ID:</label>
    <input type="text" class="form-control" id="foodid" name = "foodid">
  </div>
  <div class="form-group">
    <label for="fname">Food Name:</label>
    <input type="text" class="form-control" id="fname" name = "fname">
  </div>
   <div class="form-group">
    <label for="stock">Stock:</label>
    <input type="text" class="form-control" id="stock" name = "stock">
  </div>
<button type="submit" class="btn btn-primary">Save</button>
</form> 
      </div>
    </div>
  </div>
</div>

<h1>
    Foods
<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  +
</button>
</h1><div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Food ID</th>
                <th>Food Name</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.FoodID</td> 
<td>@row.FoodName</td> 
<td>@row.Stock</td> 
</tr> 
}
        </tbody>
    </table>
</div>
