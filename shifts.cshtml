@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Shift order by ShiftID"; 
}
<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add New Shift</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
         <form method="post" action="save-shift">
  <div class="form-group">
    <label for="shiftid">Shift ID:</label>
    <input type="text" class="form-control" id="shiftid" name = "shiftid">
  </div>
  <div class="form-group">
    <label for="shelterid">Shelter ID:</label>
    <input type="text" class="form-control" id="shelterid" name = "shelterid">
  </div>
 <div class="form-group">
    <label for="volunteerid">Volunteer ID:</label>
    <input type="text" class="form-control" id="volunteerid" name = "volunteerid">
  </div>
   <div class="form-group">
    <label for="shiftdate">Shift Date:</label>
    <input type="text" class="form-control" id="shiftdate" name = "shiftdate">
  </div>
  <div class="form-group">
    <label for="workdone">Work Done:</label>
    <input type="text" class="form-control" id="workdone" name = "workdone">
  </div>  
   <button type="submit" class="btn btn-primary">Save</button>
</form> 
      </div>
    </div>
  </div>
</div>

<h1>
    Shifts
  <!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  +
</button>
</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
             
                <th>Shift ID</th>
                <th>Shelter ID</th>
                <th>Volunteer ID</th>
                <th>Work Done</th>
                <th>Shift Date</th>
             
                
            </tr>
        </thead>
        <tbody>
 @foreach(var row in db.Query(selectQueryString))
{
          string departDisplay = "";
          if (row.ShiftDate.ToString("MM/dd/yyyy") != "01/01/0001")
          {
          departDisplay = row.ShiftDate.ToString("MM/dd/yyyy");
          }
<tr> 
<td>@row.ShiftID</td> 
<td>@row.ShelterID</td> 
<td>@row.VolunteerID</td> 
<td>@row.WorkDone</td>
<td>@row.ShiftDate.ToString("MM/DD/YYYY")</td>
</tr> 
}
        </tbody>
    </table>
</div>
