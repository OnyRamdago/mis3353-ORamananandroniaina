@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Animal_Page order by AnimalID"; 
var shelterList= "select a.*, s.* from animal a join shelter s on s.shelterid = a.shelterid";
var genderList = "select a.*,g.* from animal a join animalgender g on a.animalgenderid = g.animalgenderid";
var typeList = "select a.*,t.* from animal a join animaltype t on a.animaltypeid = t.animaltypeid";
var statusList = "select a.*,iss.* from animal a join inshelterstatus iss on iss.inshelterstatusid = a.inshelterstatusid";

string successMsg = "";
if (IsPost){
switch (Request.Form["SaveType"])
{

case "Add": 
 db.Execute("insert into Animal (AnimalID, ShelterID, AnimalName, AnimalTypeID, AnimalGenderID, DateOfBirth,InShelterStatusID) values (@0, @1, @2, @3, @4, @5, @6)", Request.Form["animalid"], Request.Form["shelterid"], Request.Form["animalname"], Request.Form["animaltype"], Request.Form["gender"], Request.Form["dob"], Request.Form["status"]);
successMsg =" Animal added.";
break;
case "Edit": 
db.Execute("update Animal set  ShelterID=@1, AnimalName=@2, AnimalTypeID=@3, AnimalGenderID=@4, DateOfBirth=@5, InShelterStatus=@6 where AnimalID = @0", Request.Form["shelterid"], Request.Form["animalname"], Request.Form["animaltype"], Request.Form["gender"], Request.Form["dob"], Request.Form["status"]);
successMsg =" Animal updated.";
break;
case "Delete": 
db.Execute("delete from Animal where AnimalID=@0", Request.Form["animalid"]);
successMsg =" Animal deleted.";
break;
}
}
}
@if (successMsg != "") {
<div class="alert alert-success">
  <strong>Success!</strong> @successMsg
</div>
}

<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title" id = "modalTitle">Add New Animal</h4>
        <button type="button" class="close" data-dismiss="modal" id ="myClose">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
         <form method="post" action="">
  <div class="form-group">
    <label for="animalid">Animal ID:</label>
    <input type="text" class="form-control" id="animalid" name = "animalid">
  </div>
  <div class="form-group">
    <label for="shelterid">Shelter ID:</label>
 <select class = "form-control" id ="shelterid" name = "shelterid">
   @foreach(var shelterrow in db.Query(shelterList))
   {
   <option value = "@shelterrow.ShelterID">@shelterrow.ShelterID - @shelterrow.ShelterName</option>
   }
    </select>
  </div>
  <div class="form-group">
    <label for="animalname">Animal Name:</label>
    <input type="text" class="form-control" id="animalname" name = "animalname">
  </div>
   <div class="form-group">
    <label for="animaltype">Animal Type ID:</label>
<select class = "form-control" id ="animaltype" name = "animaltype">
   @foreach(var typerow in db.Query(typeList))
   {
   <option value = "@typerow.AnimalTypeID">@typerow.AnimalTypeID</option>
   }
    </select>  </div>
  <div class="form-group">
    <label for="gender">Gender ID:</label>
<select class = "form-control" id ="gender" name = "gender">
   @foreach(var genderrow in db.Query(genderList))
   {
   <option value = "@genderrow.AnimalGenderID">@genderrow.AnimalGenderID - @genderrow.GenderType</option>
   }
    </select>  
   </div>
    <div class="form-group">
    <label for="dob">Date of Birth:</label>
    <input type="text" class="form-control" id="dob" name = "dob">
  </div>
    <div class="form-group">
    <label for="status">In-Shelter Status ID:</label>
<select class = "form-control" id ="status" name = "status">
   @foreach(var statusrow in db.Query(statusList))
   {
   <option value = "@statusrow.InShelterStatusType">@statusrow.InShelterStatusID - @statusrow.InshelterStatusType</option>
   }
    </select>
  </div>
<button type="submit" class="btn btn-primary">Save</button>
</form> 
      </div>
    </div>
  </div>
</div>

<h1>
    Animals
<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal"><i class="fas fa-plus-circle"></i>
</button>
</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Animal ID</th>
                <th>Shelter ID</th>
                <th>Animal Name</th>
                <th>Animal Type ID</th>
                <th>Gender ID</th>
                <th>Date of Birth</th>
                <th>InShelter Status ID</th>
              <th></th>
              <th></th>
            </tr>
        </thead>
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.AnimalID</td> 
<td>@row.ShelterID</td> 
<td>@row.AnimalName</td> 
<td>@row.AnimalTypeID</td>
<td>@row.AnimalGenderID</td> 
<td>@row.DateOfBirth.ToString("MM/dd/yyyy")</td>
<td>@row.InShelterStatusID</td> 
  <td><button type="button" class="btn btn-primary myEdit" data-animalid = "@row.AnimalID" data-shelterid = "@row.ShelterID" data-animalname = "@row.AnimalName" data-animalType = "@row.AnimalTypeID" data-gender = "@row.AnimalGenderID" data-dob = "@row.DateOfBirth"  data-status = "@row.InShelterStatusID"><i class="fas fa-pen-square"></i></button></td>
<td>
    <form method="post" action ="">
      <input type ="hidden" name="animalid" value="@row.AnimalID">
      <input type ="hidden"  name = "SaveType" value ="Delete">
      <button type= "submit" class= "btn btn-primary" onclick="return confirm('Are you sure you want to delete this item?');"><i class="far fa-trash-alt"></i></button>
</form></td>
</tr> 
}
        </tbody>
    </table>
</div>
<script>
  $(document).ready(function(){
  $(".myEdit").click(function(){
  
    $("#modalTitle").text("Edit Animal");
 
  $("#animalid").val(this.getAttribute("data-animalid"));
       $("#animalid").attr("disabled", "disabled");
  $("#shelterid").val(this.getAttribute("data-shelterid"));
  $("#animalname").val(this.getAttribute("data-animalname"));
  $("#animaltype").val(this.getAttribute("data-animaltype"));
  $("#gender").val(this.getAttribute("data-gender"));
  $("#dob").val(this.getAttribute("data-dob"));
  $("#status").val(this.getAttribute("data-status"));
                     
  $("#myModal").modal({
             show: true
    });
  $("#SaveType").val("Edit");
});
    $("#myClose").click(function(){
    $("#modalTitle").text("Add New Animal");
    $("#animalid").removeAttr("disabled");});
    
  $("#animalid").val("");
  $("#shelterid").val("");
  $("#animalname").val("");
  $("#animaltype").val("");
  $("#gender").val("");
  $("#dob").val("");
  $("#status").val("");
        $("#SaveType").val("Add");
  });
  });
</script>
