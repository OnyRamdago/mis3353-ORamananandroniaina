@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Animal_Page";
var shelterList = "select a.* from animal a join shelter s on s.shelterid = a.shelterid";
var genderList = "select a.* from animal a join animalgender g on a.animalgenderid = g.animalgenderid";
var typeList = "select a.* from animal a join animaltype t on a.animaltypeid = t.animaltypeid";
var statusList = "select a.* from animal a join inshelterstatus iss on iss.inshelterstatusid = a.inshelterstatusid";
}

<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Add New Animal</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form method="post" action="save-animal">
  <div class="form-group">
    <label for="animalid">Animal ID:</label>
    <input type="text" class="form-control" id="animalid" name = "animalid">
  </div>
 <div class="form-group">
    <label for="shelterid">Shelter ID:</label>
 <select class = "form-control" id ="shelterid" name = "shelterid">
   @foreach(var shelterrow in db.Query(shelterList))
   {
   <option value = "@shelterrow.ShelterName">@shelterrow.ShelterID</option>
   }
    </select>
  </div>
  <div class="form-group">
    <label for="gender">Gender:</label>
 <select class = "form-control" id ="gender" name = "gender">
   @foreach(var genderrow in db.Query(genderList))
   {
   <option value = "@genderrow.GenderType">@genderrow.AnimalGenderID - @genderrow.GenderType</option>
   }
    </select>
  </div>
  <div class="form-group">
    <label for="type">Animal Type:</label>
 <select class = "form-control" id ="type" name = "type">
   @foreach(var typerow in db.Query(typeList))
   {
   <option value = "@typerow.AnimalClassification">@typerow.AnimalTypeID - @typerow.AnimalClassification</option>
   }
    </select>
  </div>   
  <div class="form-group">
    <label for="animalname">Animal Name:</label>
    <input type="text" class="form-control" id="animalname" name = "animalname">
  </div>
  <div class="form-group">
    <label for="dob">Date of Birth:</label>
    <input type="date" class="form-control" id="dob" name = "dob">
  </div>
 <div class="form-group">
    <label for="breed">Breed:</label>
    <input type="text" class="form-control" id="breed" name = "breed">
  </div>
 <div class="form-group">
    <label for="admitdate">Date Admitted:</label>
    <input type="date" class="form-control" id="admitdate" name = "admitdate">
  </div>
  <div class="form-group">
    <label for="depdate">Departure Date:</label>
    <input type="date" class="form-control" id="depdate" name = "depdate">
  </div>
  <div class="form-group">
    <label for="iss">In-ShelterStatus:</label>
 <select class = "form-control" id ="iss" name = "iss">
   @foreach(var statusrow in db.Query(statusList))
   {
   <option value = "@statusrow.InShelterStatusType">@statusrow.InShelterStatusID - @statusrow.InshelterStatusType</option>
   }
    </select>
  </div> 
   <button type="submit" class="btn btn-primary">Save</button>
</form> 
      </div>

    </div>
  </div>
</div>
<h1>Animals
<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  +
</button></h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Animal ID</th>
                <th>Shelter ID</th>
                <th>Animal Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Animal Classification</th>
                <th>Breed</th>
                <th>In-Shelter Status</th>
                <th>Date Admitted</th>
                <th>Departure Date</th>

            </tr>
        </thead>
      
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.AnimalID</td> 
<td>@row.ShelterID</td> 
<td>@row.AnimalName</td> 
<td>@row.GenderType</td>
<td>@row.DateOfBirth.ToString("MM/dd/yyyy")</td>
<td>@row.Age</td> 
<td>@row.AnimalClassification</td> 
<td>@row.Breed</td>
<td>@row.InShelterStatusType</td> 
<td>@row.DateAdmitted.ToString("MM/dd/yyyy")</td> 
<td>@row.DepartureDate.ToString("MM/dd/yyyy")</td> 
</tr> 
}
        </tbody>
    </table>
</div>
