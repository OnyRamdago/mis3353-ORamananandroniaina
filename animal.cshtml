@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Animal_Page";
}

<!-- The Modal -->
<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Modal Heading</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        Modal body..
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
<h1>Animals
<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  +
</button></h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Animal ID</th>
                <th>Shelter ID</th>
                <th>Animal Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Animal Classification</th>
                <th>Breed</th>
                <th>In-Shelter Status</th>
                <th>Date Admitted</th>
                <th>Departure Date</th>

            </tr>
        </thead>
      
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.AnimalID</td> 
<td>@row.ShelterID</td> 
<td>@row.AnimalName</td> 
<td>@row.GenderType</td>
<td>@row.DateOfBirth</td>
<td>@row.Age</td> 
<td>@row.AnimalClassification</td> 
<td>@row.Breed</td>
<td>@row.InShelterStatusType</td> 
<td>@row.DateAdmitted.ToString("MM/dd/yyyy")</td> 
<td>@row.DepartureDate.ToString("MM/dd/yyyy")</td> 
</tr> 
}
        </tbody>
    </table>
</div>
