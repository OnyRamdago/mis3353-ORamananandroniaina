@{Layout = "_Layout.cshtml";}
@{
var db = Database.Open("my-connection"); 
var selectQueryString = "select * from Animal_Page";
}
<h1>Aircraft</h1>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Animal ID</th>
                <th>Shelter ID</th>
                <th>Animal Name</th>
                <th>Gender</th>
                <th>Date of Birth</th>
                <th>Age</th>
                <th>Animal Classification</th>
                <th>Breed</th>
                <th>In-Shelter Status</th>
                <th>Date Admitted</th>
                <th>Departure Date</th>

            </tr>
        </thead>
      
        <tbody>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td>@row.AnimalID</td> 
<td>@row.ShelterID</td> 
<td>@row.AnimalName</td> 
<td>@row.GenderType</td>
<td>@row.DateOfBirth</td>
<td>@row.Age</td> 
<td>@row.AnimalClassification</td> 
<td>@row.Breed</td>
<td>@row.InShelterStatusType</td> 
<td>@row.DateAdmitted</td> 
<td>@row.DepartureDate</td> 
</tr> 
}
        </tbody>
    </table>
</div>
